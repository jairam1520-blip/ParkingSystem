@model IEnumerable<ParkingSystem.Models.Booking>

 <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-heading">Booking List</h2>
        </div>
        <div class="col-6 text-end ">
           
            <a asp-action="NewBooking" class="btn btn-primary ">Create New</a>
        </div >
    </div>



<table  class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            
            <th width="25%">
                @Html.DisplayNameFor(model => model.VehicleType)
            </th>
            <th width="25%">
                @Html.DisplayNameFor(model => model.StartDateTime)
            </th>
            <th width="25%">
                @Html.DisplayNameFor(model => model.EndDateTime)
            </th>
            <th width="25%">
                @Html.DisplayNameFor(model => model.BillAmount)
            </th>
            <th width="25%">
                @Html.DisplayNameFor(model => model.slot.SlotNumber)
            </th>
            <th width="25%">Changes</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           
            <td width="25%">
                @Html.DisplayFor(modelItem => item.VehicleType)
            </td width="25%">
            <td width="25%">
                @Html.DisplayFor(modelItem => item.StartDateTime)
            </td >
            <td width="25%">
                @Html.DisplayFor(modelItem => item.EndDateTime)
            </td>
            <td width="25%">
                @Html.DisplayFor(modelItem => item.BillAmount)
            </td>
            <td width="25%">
                @Html.DisplayFor(modelItem => item.slot.SlotNumber)
            </td>
            <td width="25%">
                
                <div class="w-100 btn-group" role="group">
                    <a class="btn btn-danger mx-1" asp-action="DeleteBooking" asp-route-id="@item.Bid">Delete</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
