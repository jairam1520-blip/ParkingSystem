@model ParkingSystem.Models.Slot

@{
    ViewData["Title"] = "EditSlot";
}

<h1>EditSlot</h1>

<h4>Slot</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditSlotPost">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Sid" />
            <div class="form-group">
                <label asp-for="SlotNumber" class="control-label"></label>
                <input asp-for="SlotNumber" class="form-control" />
                <span asp-validation-for="SlotNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SlotType" class="control-label"></label>
                <select asp-for="SlotType" asp-items="@ParkingSystem.Utility.Helper.GetVehicleType()"  class="form-control" ></select>
                <span asp-validation-for="SlotType" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ViewAllSlots">Back to List</a>
</div>

