@using Microsoft.AspNetCore.Identity
@inject RoleManager<IdentityRole> roleManager
@inject SignInManager<ApplicationUser> signInManager

@if(signInManager.IsSignedIn(User)){
    <form method="post" id="logoutForm" asp-action="Logoff" asp-controller="Account">
        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item px-3 text-white">Hello, @User.Identity.Name</li>
            <li class="nav-item px-3"><a style="text-decoration:none;" class="text-white" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
            @if (User.IsInRole("Admin"))
            {
                <li class="nav-item px-3"><a  asp-controller="Admin"  asp-action="GeAllMessages"><img height="35" width="35" src="~/lib/images/notification (1).png" /></a></li>
            }
        </ul>
        
    </form>
}
else{
    <ul class="nav navbar-nav navbar-right ">
                             <!-- text,action-method,controller,route,html-attributes-->
        @*<li>@Html.ActionLink("Sign Up","Register","Account",routeValues:null,htmlAttributes:new{id="registerLink"})</li>*@
        <li class="nav-item px-3">
            <a class="nav-link text-white" asp-action="Register" asp-controller="Account"><span class="glyphicon glyphicon-user"></span>Register</a>
        </li>
        <li class="nav-item px-5">
            <a class="nav-link text-white" asp-action="Login" asp-controller="Account"><span class="glyphicon glyphicon-log-in"></span>Log In</a>
        </li>


     



    </ul>
}